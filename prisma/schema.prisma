generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PokemonCard {
  id         Int    @id @default(autoincrement())
  name       String @unique
  pokedexId  Int    @unique
  typeId     Int
  type       Type   @relation(fields: [typeId], references: [id])
  lifePoints Int
  size       Float
  weight     Float
  imageUrl   String
}

model Type {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  pokemonCards PokemonCard[] @relation
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
}